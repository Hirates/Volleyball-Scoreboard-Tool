<body>
    <div class="container">
        <div class="scoreboard">
            <h1 id="team1_name">Team 1: {{ team1_name }}</h1>
            <h1 id="team1_score">Punkte: {{ team1_score }}</h1>
            <h1 id="team1_sets">Sätze: {{ team1_sets }}</h1>

            <h1 id="team2_name">Team 2: {{ team2_name }}</h1>
            <h1 id="team2_score">Punkte: {{ team2_score }}</h1>
            <h1 id="team2_sets">Sätze: {{ team2_sets }}</h1>
            <!-- Weitere Elemente -->
        </div>
    </div>
    <script>
        function refreshScores() {
            fetch('/get-scores')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('team1_score').textContent = data.team1_score;
                    document.getElementById('team2_score').textContent = data.team2_score;
                    document.getElementById('team1_sets').textContent = data.team1_sets;
                    document.getElementById('team2_sets').textContent = data.team2_sets;
                    // Aktualisieren Sie hier weitere Elemente
                });
        }

        // Polling alle 5 Sekunden
        setInterval(refreshScores, 50);
    </script>
</body>

